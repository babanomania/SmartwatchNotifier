<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView android:id="@+id/ScrlView" android:layout_width="fill_parent" android:layout_height="fill_parent" >
        <LinearLayout android:id="@+id/layoutForScroll" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            
    <TextView
        android:id="@+id/messageTitleLabel"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="Title Of Message" />

    <EditText
        android:id="@+id/messageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/messageContentLabel"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="Content Of Message" />

    <EditText
        android:id="@+id/messageContent"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewaction1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Action1 Task"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/action1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
		<TextView
		    android:id="@+id/textViewaction2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dp"
		    android:text="Action2 Task"
		    android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/action2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />        

		<TextView
		    android:id="@+id/textViewaction3"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dp"
		    android:text="Action3 Task"
		    android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/action3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />        
        
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp" >

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:maxWidth="96dp"
            android:minHeight="48dp"
            android:minWidth="96dp"
            android:text="Save" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="50dp"
            android:gravity="center_vertical|center_horizontal"
            android:minHeight="48dp"
            android:minWidth="96dp"
            android:text="Cancel" />

    </RelativeLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>